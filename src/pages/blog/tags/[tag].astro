---
import type { CollectionEntry } from 'astro:content'
// Blog Tag Page

// Components
// @ts-ignore
import Layout from '../../../../layouts/Layout.astro'
// @ts-ignore
import Hero from '../../../../components/blocks/hero/PageHeader.astro'
// @ts-expect-error
import BlogPosts from '../../../../components/blocks/blog/BlogPosts.astro'

// Data
import { getCollection } from 'astro:content'

export async function getStaticPaths() {
	const allPosts = (await getCollection('blog')) as CollectionEntry<'blog'>[]
	const uniqueTags = [...new Set(allPosts.map((post) => post.data.tags).flat())]
	return uniqueTags.map((tag) => {
		const filteredPosts = allPosts.filter((post) => post.data.tags.includes(tag))
		return {
			params: { tag },
			props: { posts: filteredPosts }
		}
	})
}

const { tag } = Astro.params
const { posts } = Astro.props

// SEO
const SEO = {
	title: `Foxi | posts tagges as ${tag}`,
	description: `Explore Foxi's latest news designed to enhance productivity, ensure topâ€“notch security, and integrate seamlessly with your favorite tools. Join us as we help you make the most out of Foxi!`
}

// Page Header
const header = {
	title: `Foxi posts about <br><strong>${tag}</strong>`,
	text: `Stay informed, stay productive with all the latest from Foxi.`
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={header.title} text={header.text} />
	<BlogPosts data={posts} />
</Layout>
